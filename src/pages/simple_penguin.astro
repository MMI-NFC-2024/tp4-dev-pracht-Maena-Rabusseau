---
import PlotFigure from "../components/PlotFigure.astro";
import Layout from "../layouts/Layout.astro";
import * as Plot from "@observablehq/plot";
import penguins from "../assets/penguins.json";
---

<Layout>
  <h1 class="text-xl font-bold mb-4 items-center justify-center my-8 ml-45">Simple Penguin</h1>
 

<div id="myplot" class="flex justify-center items-center my-20"></div>
<script >

import * as Plot from "@observablehq/plot";
import penguins from '../assets/penguins.json';

 const chart = Plot.plot({
      width: 600,
      height: 400,
      marks: [
        Plot.barY(penguins, { x: "species", y: "body_mass_g", fill: "sex", inset: 0.1 })
      ],
      y: { grid: true, label: "Body Mass (g)" },
      x: { label: "Species" },
      color: { legend: true }
    });

    document.getElementById("myplot").appendChild(chart);

// const plot = Plot.rectY({length: 10000}, Plot.binX({y: "count"}, {x: Math.random})).plot();
// const div = document.querySelector("#myplot");
// div.append(plot);

</script>
</Layout>
